
<h1>Books</h1>
<%# 一覧表示 %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book|%>
  <tr>
    <th>
     <span><%= book.title %></span>
    </th>
    <th>
      <span><%= book.body %></span>
    </th>
    <th>
      <span>
        <%= link_to "Show", book_path(book.id) %>
      </span>
    </th>
    <th>
      <span>
        <%= link_to "Edit", edit_book_path(book.id)%>
      </span>
    </th>
    <th>
      <span>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are You Sure?" %>
      </span>
    </th>
  </tr>
  <% end %>
  </tbody>
</table>

<div>
<h2>New book</h2>

<%# エラーメッセージ %>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%# 入力フォーム %>
<%= form_with model: @book do |f| %>
  <p>
    <h4>Title</h4>
    <%= f.text_field :title %>
	</p>

  <p>
    <h4>Body</h4>
    <%= f.text_area :body %>
	</p>
  
  <p>
    <%= f.submit 'Create Book' %>
  </p>
<% end %>
</div>
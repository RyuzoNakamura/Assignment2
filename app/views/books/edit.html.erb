<h1>Editing Book</h1>

<%# エラーメッセージ %>
<% if @book.errors.any? %>
<div id="error_explanation">
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
<div class="field">
  <p>
  <h4>Title</h4>
  <%= f.text_field :title %>
  </p>
</div>
<div class="field">  
  <p>
  <h4>Body</h4>
  <%= f.text_area :body %>
  </p>
</div>
  <p>
  <%= f.submit 'Update Book'%>
  </p>

  <p>
  <span><%= link_to 'Show', book_path(@book.id)%></span>
  |
  <span><%= link_to 'Back', '/books'%></span>
  </p>
<% end %>